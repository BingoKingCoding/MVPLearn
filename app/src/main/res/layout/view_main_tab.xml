<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center_vertical"
    android:layout_height="@dimen/height_bottom_bar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@color/bg_bottom_navigation"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <com.bingo.king.mvp.ui.widget.TabMainMenuView
                android:id="@+id/view_tab_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stateListAnimator="@drawable/bm_selector_press_scale_out"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <com.bingo.king.mvp.ui.widget.TabMainMenuView
                android:id="@+id/view_tab_dashboard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stateListAnimator="@drawable/bm_selector_press_scale_out"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tab_mall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <com.bingo.king.mvp.ui.widget.TabMainMenuView
                android:id="@+id/view_tab_favourite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stateListAnimator="@drawable/bm_selector_press_scale_out"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <com.bingo.king.mvp.ui.widget.TabMainMenuView
                android:id="@+id/view_tab_me"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stateListAnimator="@drawable/bm_selector_press_scale_out"/>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>