<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    android:id="@+id/dialog_window_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.bingo.king.mvp.ui.widget.RatioRelativeLayout
        android:id="@+id/dialog_view_bg"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/mn_dialog_view_bg"
        app:ratioHeightLayout="1"
        app:ratioWidthLayout="1">

        <!--<ProgressBar-->
        <!--android:id="@+id/pBar"-->
        <!--android:layout_width="74px"-->
        <!--android:layout_height="74px"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="40px"-->
        <!--android:indeterminateBehavior="repeat"-->
        <!--android:indeterminateOnly="true"/>-->


        <com.bingo.king.mvp.ui.widget.ProgressWheel
            android:id="@+id/progress_wheel"
            android:layout_width="74px"
            android:layout_height="74px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40px"
            app:mn_barColor="@color/colorAccent"
            app:mn_barWidth="2dp"
            app:mn_fillRadius="true"
            app:mn_progressIndeterminate="true"/>


        <TextView
            android:id="@+id/tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progress_wheel"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20px"
            android:layout_marginTop="25px"
            android:text="请稍候..."
            android:textColor="@color/white"
            android:textSize="24px"/>
    </com.bingo.king.mvp.ui.widget.RatioRelativeLayout>


</com.zhy.autolayout.AutoRelativeLayout>
