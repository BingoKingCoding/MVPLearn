<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RatioLayout">
        <attr name="ratioWidthLayout" format="integer"/>
        <attr name="ratioHeightLayout" format="integer"/>
        <attr name="ratioType">
            <enum name="byWidth" value="0"/>
            <enum name="byHeight" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="sparkbutton">
            <attr name="sparkbutton_iconSize" format="dimension|reference" />
            <attr name="sparkbutton_activeImage" format="reference" />
            <attr name="sparkbutton_inActiveImage" format="reference" />
            <attr name="sparkbutton_primaryColor" format="reference" />
            <attr name="sparkbutton_secondaryColor" format="reference" />
            <attr name="sparkbutton_pressOnTouch" format="boolean" />
            <attr name="sparkbutton_animationSpeed" format="float" />
            <attr name="sparkbutton_activeImageTint" format="reference" />
            <attr name="sparkbutton_inActiveImageTint" format="reference" />
        </declare-styleable>
        <declare-styleable name="SmileyLoadingView">
            <!-- animation duration -->
            <attr name="duration" format="integer"/>
            <!-- stroke width -->
            <attr name="strokeWidth" format="dimension"/>
            <!-- stroke color -->
            <attr name="strokeColor" format="color"/>
            <!-- animation repeat count -->
            <attr name="animRepeatCount" format="integer"/>
        </declare-styleable>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="reference|dimension"/>
        <attr name="civ_border_color" format="reference|color"/>
        <attr name="civ_border_overlay" format="reference|boolean"/>
        <attr name="civ_circle_background_color" format="reference|color"/>
        <attr name="civ_fill_color" format="reference|color"/>
    </declare-styleable>
</resources>